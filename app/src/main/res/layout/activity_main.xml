<?xml version="1.0" encoding="utf-8"?>
<com.zhowin.viewlibrary.view.NoNestedScrollview xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTypeOne"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_44"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/spacing_10"
            android:text="密码支付框"
            android:textColor="@color/color_333"
            android:textSize="14sp" />

        <View style="@style/DivideStyleOf1dp" />

        <TextView
            android:id="@+id/tvTypeTwo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_44"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/spacing_10"
            android:text="密码支付框（自定义键盘）"
            android:textColor="@color/color_333"
            android:textSize="14sp" />

        <View style="@style/DivideStyleOf1dp" />

        <TextView
            android:id="@+id/tvTypeThree"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_44"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/spacing_10"
            android:text="Android样式对话框"
            android:textColor="@color/color_333"
            android:textSize="14sp" />

        <View style="@style/DivideStyleOf1dp" />

        <TextView
            android:id="@+id/tvTypeFour"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_44"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/spacing_10"
            android:text="IOS样式对话框"
            android:textColor="@color/color_333"
            android:textSize="14sp" />

        <View style="@style/DivideStyleOf1dp" />

        <TextView
            android:id="@+id/tvTypeFive"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_44"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/spacing_10"
            android:text="页面状态的展示"
            android:textColor="@color/color_333"
            android:textSize="14sp" />

        <View style="@style/DivideStyleOf1dp" />

        <TextView
            android:id="@+id/tvTypeSix"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_44"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/spacing_10"
            android:text="加载进度的对话框"
            android:textColor="@color/color_333"
            android:textSize="14sp" />

        <View style="@style/DivideStyleOf1dp" />

        <com.zhowin.viewlibrary.view.CircleProgressBarView
            android:id="@+id/progressView"
            android:layout_width="@dimen/spacing_60"
            android:layout_height="@dimen/spacing_60"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp" />


    </LinearLayout>


</com.zhowin.viewlibrary.view.NoNestedScrollview>