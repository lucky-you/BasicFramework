<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootLayout"
    android:background="@color/white"
    android:orientation="vertical">

    <com.zhowin.library.view.ZhoSimpleTitleView
        android:id="@+id/zhoTitleView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_48"
        android:background="@color/colorPrimary"
        app:leftIcon="@drawable/svg_white_return_back"
        app:leftText="返回"
        app:leftTextColor="@color/white"
        app:leftTextVisibility="true"
        app:rightText="注册"
        app:rightTextVisibility="true"
        app:title="登录界面"
        app:titleColor="@color/white" />

    <include layout="@layout/include_refresh_recycler_layout" />


</LinearLayout>